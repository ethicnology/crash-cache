# Database
DATABASE_URL=postgresql://username:password@localhost/crash_cache
DB_POOL_MAX_SIZE=10
DB_POOL_CONNECTION_TIMEOUT_SECS=30

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Request payload limits
MAX_COMPRESSED_PAYLOAD_BYTES=10240
MAX_UNCOMPRESSED_PAYLOAD_BYTES=1048576

# Digest Worker
# WORKER_INTERVAL_SECS also controls:
#   - Project validation cache TTL
#   - Health stats refresh interval
WORKER_INTERVAL_SECS=60
WORKER_BUDGET_SECS=50
DIGEST_BATCH_SIZE=50

# Compression
MAX_CONCURRENT_COMPRESSIONS=16

# Health endpoint cache
HEALTH_CACHE_TTL_SECS=10

# Rate limiting (requests per second, 0 = disabled)
RATE_LIMIT_GLOBAL_PER_SEC=1000
RATE_LIMIT_PER_IP_PER_SEC=50
RATE_LIMIT_PER_PROJECT_PER_SEC=500
RATE_LIMIT_BURST_MULTIPLIER=2

# Analytics (bucket aggregation)
ANALYTICS_FLUSH_INTERVAL_SECS=10
ANALYTICS_RETENTION_DAYS=30
ANALYTICS_CHANNEL_BUFFER_SIZE=10000
